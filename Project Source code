<div class="container">
    <h1>ðŸ‡®ðŸ‡³ Prompt-Driven Indian Tree Species Identifier</h1>

    <div class="upload-section" onclick="document.getElementById('imageUpload').click();">
        <p>Click or select an Indian Tree Image (Leaf, Bark, Full Tree)</p>
        <input type="file" id="imageUpload" accept="image/*">
        <button class="upload-button" onclick="identifyTree(event)">Identify Indian Tree Species</button>
        <p id="fileName" style="margin-top: 10px; font-style: italic; color: #666;"></p>
    </div>

    <hr>

    <div id="results"></div>
</div>

<script>

    const imageUpload = document.getElementById('imageUpload');
    const fileNameDisplay = document.getElementById('fileName');
    const resultsDiv = document.getElementById('results');

    imageUpload.addEventListener('change', function() {
        if (this.files && this.files[0]) {
            fileNameDisplay.textContent = 'Selected File: ' + this.files[0].name;
            resultsDiv.style.display = 'none';
        } else {
            fileNameDisplay.textContent = '';
        }
    });

    function identifyTree(event) {
        event.stopPropagation();

        if (!imageUpload.files || imageUpload.files.length === 0) {
            alert("Please select a tree image file first!");
            return;
        }

        const mockResults = getMockTreeData(imageUpload.files[0].name);

        displayResults(mockResults);
    }

    /* **************************************
       COMPLETE MOCK IDENTIFICATION LOGIC
    **************************************** */
    function getMockTreeData(fileName) {
        const lowerFileName = fileName.toLowerCase();

        // NEEM
        if (lowerFileName.includes('neem') || lowerFileName.includes('azadirachta')) {
            return {
                name: "Azadirachta indica (Neem)",
                benefits: [
                    "ðŸŒ¿ Natural air purifier with medicinal properties.",
                    "ðŸ’§ Highly drought-tolerant.",
                    "ðŸ› Works as natural pesticide.",
                    "ðŸ’¨ Provides excellent shade."
                ]
            };
        }

        // PEEPAL
        else if (lowerFileName.includes('peepal') || lowerFileName.includes('ficus')) {
            return {
                name: "Ficus religiosa (Peepal)",
                benefits: [
                    "ðŸ’¨ Releases oxygen even at night.",
                    "ðŸ™ Strong cultural importance.",
                    "ðŸŒ³ Massive shade.",
                    "â™» Supports biodiversity."
                ]
            };
        }

        // JAMUN
        else if (lowerFileName.includes('jamun') || lowerFileName.includes('syzygium')) {
            return {
                name: "Syzygium cumini (Jamun)",
                benefits: [
                    "â˜€ Tolerates heat and pollution.",
                    "ðŸŽ Produces edible fruit.",
                    "ðŸ’§ Good for soil and water conservation.",
                    "ðŸŒ¿ Dense evergreen foliage."
                ]
            };
        }

        // AMALTAS
        else if (lowerFileName.includes('amaltas') || lowerFileName.includes('cassia')) {
            return {
                name: "Cassia fistula (Amaltas)",
                benefits: [
                    "âœ¨ Beautiful yellow flowers.",
                    "â˜€ Heat resistant.",
                    "ðŸ¦‹ Loved by pollinators.",
                    "ðŸŒ± Medium-sized tree for avenues."
                ]
            };
        }

        // ðŸŒ´ COCONUT TREE
        else if (lowerFileName.includes('coconut') || lowerFileName.includes('cocos')) {
            return {
                name: "Cocos nucifera (Coconut Palm)",
                benefits: [
                    "ðŸ¥¥ Provides coconut fruit, water, coir and oil.",
                    "ðŸŒ´ Thrives in tropical coastal regions.",
                    "ðŸ’§ Prevents coastal soil erosion.",
                    "ðŸ Strong aesthetic appeal."
                ]
            };
        }

        // ðŸ¥­ MANGO TREE
        else if (lowerFileName.includes('mango') || lowerFileName.includes('mangifera')) {
            return {
                name: "Mangifera indica (Mango Tree)",
                benefits: [
                    "ðŸ¥­ Produces mango fruit.",
                    "ðŸŒ³ Large shade canopy.",
                    "ðŸƒ Strong air-purifying ability.",
                    "ðŸ¦ Supports birds & insects."
                ]
            };
        }

        // ðŸŒ³ BANYAN TREE
        else if (lowerFileName.includes('banyan') || lowerFileName.includes('ficus beng')) {
            return {
                name: "Ficus benghalensis (Banyan Tree)",
                benefits: [
                    "ðŸŒ³ Huge everlasting shade.",
                    "ðŸž Cultural and historical value.",
                    "ðŸ¦ Wildlife supporting.",
                    "ðŸŒ± Extremely long lifespan."
                ]
            };
        }

        // ðŸŒ² TEAK TREE
        else if (lowerFileName.includes('teak') || lowerFileName.includes('tectona')) {
            return {
                name: "Tectona grandis (Teak Tree)",
                benefits: [
                    "ðŸªµ Premium timber value.",
                    "â˜€ Thrives in warm climate.",
                    "ðŸŒ± Used in afforestation.",
                    "ðŸ’§ Reduces soil erosion."
                ]
            };
        }

        // DEFAULT UNKNOWN
        else {
            return {
                name: "Unidentified Indian Species",
                benefits: [
                    "ðŸŒ¡ Helps cool the environment.",
                    "ðŸŒ¬ Improves air quality.",
                    "ðŸ’§ Aids groundwater recharge.",
                    "ðŸ¡ Improves landscape and wellness."
                ]
            };
        }
    }

    function displayResults(data) {
        let benefitsHTML = data.benefits.map(b => <li>${b}</li>).join('');

        resultsDiv.innerHTML = `
            <h2>Identification Results</h2>
            <span class="tree-name">${data.name}</span>
            <p><strong>Key Benefits:</strong></p>
            <ul>${benefitsHTML}</ul>
        `;
        resultsDiv.style.display = 'block';
    }

</script>

